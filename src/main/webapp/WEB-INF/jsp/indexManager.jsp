                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>id</th>
                      <th>email</th>
                      <th>content</th>
                      <th>state</th>
                      <th>Handle</th>
                      <th>delete</th>
                    </tr>
                  </thead>
                  <tfoot>
